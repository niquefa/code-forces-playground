import java.util.Scanner;
 
public class main {
    public static void main (String[] args) {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int ans = 0;
        for (int t = 0; t < n; t++)
            ans += in.nextInt() + in.nextInt() + in.nextInt() > 1 ? 1 : 0;
        
        System.out.println(ans);
        in.close();
    }
}
